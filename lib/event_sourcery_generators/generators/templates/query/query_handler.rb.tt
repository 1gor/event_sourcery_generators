require 'queries/<%= projection_name %>/model'
require 'queries/<%= projection_name %>/view'

module <%= project_class_name %>
  module Queries
    module <%= projection_name.classify %>
      class QueryHandler
        include EventSourcery::Queries::QueryHandler

        def handle(query)
          <%= projection_name %> = Model.find_all
          View.decorate(<%= projection_name %>: <%= projection_name %>)
        end
      end
    end
  end
end
